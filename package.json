{
  "name": "nodejs-monolith",
  "version": "2.0.0",
  "description": "A modern TypeScript monolith with clean architecture",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon --exec ts-node src/main.ts",
    "build": "tsc",
    "test": "npm run tsc -- --noEmit && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "tsc": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "migration:create": "npx sequelize-cli migration:create",
    "migration:run": "npx sequelize-cli db:migrate",
    "migration:undo": "npx sequelize-cli db:migrate:undo"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "joi": "^18.0.2",
    "jstoxml": "^3.2.10",
    "nodemon": "^3.1.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.0",
    "sequelize": "^6.37.0",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.9.0",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.0",
    "@types/jstoxml": "^2.0.2",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "monolith",
    "clean-architecture",
    "sequelize",
    "postgresql"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
